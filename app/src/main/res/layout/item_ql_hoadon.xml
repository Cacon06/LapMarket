<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgAnhHoaDon"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/giohang_mh" />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_tenHoaDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên hàng"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="36dp"
                android:contentDescription="Tên hàng" />

            <TextView
                android:id="@+id/txt_soLuongHoaDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Số lượng"
                android:paddingLeft="36dp" />

            <TextView
                android:id="@+id/txt_giaTienHoaDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá tiền"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:paddingLeft="38dp" />

            <TextView
                android:id="@+id/txt_customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng"
                android:paddingLeft="36dp" />

            <TextView
                android:id="@+id/txt_customerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:paddingLeft="36dp" />

            <TextView
                android:id="@+id/txt_customerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:paddingLeft="36dp" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:paddingLeft="36dp" />

            <Button
                android:id="@+id/btn_thanhToan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_margin="10dp"
                android:backgroundTint="#E88364"
                android:text="Thanh Toán" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
